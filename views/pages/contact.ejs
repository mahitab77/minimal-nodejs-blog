<!-- views/pages/contact.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Include the head partial which contains meta tags, Bootstrap, and custom CSS -->
  <%- include('../partials/head.ejs') %> 
</head>
<body>
  <!-- Include the navbar partial for the navigation menu -->
  <%- include('../partials/navbar.ejs') %>

  <!-- Page Header Section -->
  <!-- This section includes a large header with a background image and the "Contact Me" title -->
  <header class="masthead" style="background-image: url('/assets/img/contact-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <div class="page-heading">
            <h1>Contact Me</h1>
            <span class="subheading">Have questions? I have answers.</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content Section -->
  <!-- This section contains a contact form for users to fill out -->
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>
        <!-- Contact Form -->
        <form id="contactForm">
          <div class="form-floating mb-3">
            <input class="form-control" id="name" type="text" placeholder="Enter your name..." required />
            <label for="name">Name</label>
          </div>
          <div class="form-floating mb-3">
            <input class="form-control" id="email" type="email" placeholder="Enter your email..." required />
            <label for="email">Email address</label>
          </div>
          <div class="form-floating mb-3">
            <input class="form-control" id="phone" type="tel" placeholder="Enter your phone number..." />
            <label for="phone">Phone</label>
          </div>
          <div class="form-floating mb-3">
            <textarea class="form-control" id="message" placeholder="Enter your message..." style="height: 150px" required></textarea>
            <label for="message">Message</label>
          </div>
          <br />
          <!-- Submit Button -->
          <button class="btn btn-primary text-uppercase" type="submit">Send</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Include the footer partial for the footer section -->
  <%- include('../partials/footer.ejs') %> 
</body>
</html>
